{
  "name": "HuntX",
  "description": "Xpath-Finder",
  "version": "1.0",
  "manifest_version": 2,
  "icons": {
    "128" : "assets/icon/32.png"
  },
  "permissions": 
  [
    "<all_urls>",
    "contextMenus",
    "tabs",
    "webNavigation"
  ],
  "content_scripts":
   [
      {
        "matches":["<all_urls>"],
        "run_at":"document_start",
        "js": ["app/src/content.js"]
      }
    ],
    "background":
    {
      "persistent": false,
      "scripts":[
        "eventPage.js",
        "app/src/content.js"
      ]
    }
}