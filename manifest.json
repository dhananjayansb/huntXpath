{
    "name": "huntX",
    "description": "Xpath-Finder",
    "version": "1.0",
    "manifest_version": 2,
    "icons": {
        "128": "assets/icon/32.png"
    },

    "permissions": [
        "contextMenus",
        "tabs",
        "<all_urls>"
    ],
    "content_scripts": [{
        "matches": ["<all_urls>"],
        "run_at": "document_start",
        "js": ["app/src/contentScript.js"]
    }],
    "background": {
        "persistent": false,
        "scripts": ["js/eventPage.js"]
    }
}